{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Voiceprint Library Schema",
  "type": "object",
  "required": ["id", "name", "created_at", "speakers"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "minLength": 1
    },
    "speakers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "embeddings"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "embeddings": {
            "type": "array"
          }
        },
        "additionalProperties": false
      }
    }
  }
}
